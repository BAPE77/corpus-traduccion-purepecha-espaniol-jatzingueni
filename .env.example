# J'atzingueni Corpus - Environment Configuration Template

# DATABASE CONFIGURATION

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jatzingueni_corpus
DB_USER=jatzingueni_app
DB_PASSWORD=password

# Connection pool settings (optional)
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10

# SSL mode: disable, allow, prefer, require, verify-ca, verify-full
DB_SSLMODE=prefer

# PIPELINE CONFIGURATION

# Logging level: DEBUG, INFO, WARNING, ERROR
PIPELINE_LOG_LEVEL=INFO

# Batch sizes for processing
PIPELINE_BATCH_SIZE=1000
ALIGNMENT_BATCH_SIZE=1000
EXPORT_BATCH_SIZE=5000

# WEB SCRAPING CONFIGURATION

# JW.org scraping settings
JW_ORG_RATE_LIMIT=1.0  # Minimum seconds between requests
JW_ORG_MAX_RETRIES=3
JW_ORG_TIMEOUT=30
MAX_ARTICLES_PER_RUN=100

# User agent for web scraping
USER_AGENT="Mozilla/5.0 (J'atzingueni Corpus Research Project)"

# ALIGNMENT CONFIGURATION

# fast_align executable path
FAST_ALIGN_PATH=fast_align

# Alignment quality thresholds
ALIGNMENT_CONFIDENCE_THRESHOLD=0.7
ALIGNMENT_HIGH_QUALITY_THRESHOLD=0.85

# Neural alignment settings (awesome-align, SimAlign)
ALIGNMENT_MODEL=bert-base-multilingual-cased
ALIGNMENT_BATCH_SIZE=32
ALIGNMENT_USE_GPU=false

# QUALITY METRICS CONFIGURATION

# Primary metric targets
TARGET_ALIGNMENT_ACCURACY=0.85
TARGET_CORPUS_SIZE_TOKENS=500000

# Sampling for manual review
MANUAL_REVIEW_SAMPLE_RATE=0.10  # 10% of auto-aligned

# EXPORT CONFIGURATION

# Output directories
EXPORT_OUTPUT_DIR=./exports
LOG_OUTPUT_DIR=./logs
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed

# Export formats
EXPORT_TMX_ENABLED=true
EXPORT_CONLLU_ENABLED=true
EXPORT_JSON_ENABLED=true
EXPORT_PARALLEL_TEXT_ENABLED=true

# DEVELOPMENT SETTINGS

# Debug mode (more verbose logging)
DEBUG_MODE=false

# Test mode (use smaller datasets)
TEST_MODE=false

# Dry run mode (don't write to database)
DRY_RUN=false

# OPTIONAL: EXTERNAL SERVICES

# If using external alignment services
# ALIGNMENT_API_URL=
# ALIGNMENT_API_KEY=

# If using external storage
# S3_BUCKET=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=